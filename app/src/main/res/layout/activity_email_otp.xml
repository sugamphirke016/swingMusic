<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOTP"
    android:background="@color/bg_logo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_logo"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="closeButt"
            android:backgroundTint="@color/bg_logo"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_close_24" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anime"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/email_otp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/bungee"
            android:includeFontPadding="false"
            android:text="E-Mail"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="80sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bungee"
            android:includeFontPadding="false"
            android:text="Verification"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/antic"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Enter One Time Password sent on"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antic"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.chaos.view.PinView
            android:id="@+id/pinFromUser"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:cursorVisible="true"
            android:inputType="number"
            app:cursorColor="@color/black"
            app:itemCount="4"
            app:itemRadius="5dp"
            app:lineColor="@color/dark_black" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/verifyButt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:backgroundTint="@color/black"
                android:background="@drawable/btn_gradient"
                android:text="Verify OTP"
                android:textColor="@color/white"
                android:visibility="visible"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anime_down"
            android:layout_width="200dp"
            android:layout_marginTop="-50dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/otp_2"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:visibility="visible"/>

    </LinearLayout>

</ScrollView>